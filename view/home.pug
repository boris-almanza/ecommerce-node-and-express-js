

doctype html 
html(lang='es')

    head
        title HOME
        link(rel="stylesheet" href="/static/bootstrap/css/bootstrap.min.css")
        script(src="/static/bootstrap/js/jquery.js")
        script(src="/static/bootstrap/popper/dist/popper.js")
        script(src="/static/bootstrap/js/bootstrap.min.js")
    body
        h1 bienvenido a mi home
        if user
            h2=user.name
            button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" ) Logout
                a(href="/logout") 

            div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
                div(class="modal-dialog" role="document")
                    div(class="modal-content")
                        div(class="modal-header")
                            h5(class="modal-title" id="exampleModalLabel") Modal title
                            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                 span(aria-hidden="true") times
              
             
                        div(class="modal-body")
                        div(class="modal-footer")
                            button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
                            button(type="button" class="btn btn-primary") Save changes


           
        else
            button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#login" ) Login
                
            button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" ) Register
                 




            div(class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
                div(class="modal-dialog modal-dialog-centered" role="document")
                    div(class="modal-content")
                        div(class="modal-header")
                            img(src="/static/images/logins.jpg") 
                            h5(class="modal-title" id="exampleModalLabel") Login
                            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                 span(aria-hidden="true") close
              
             
                        div(class="modal-body")
                            .container
                                form(action = "/login" method = "POST" class="form-inline" )
                                    .form-group
                                        input(name = "email" type = "text" class="form-control" placeholder = "E-mail")
                                    .form-group
                                        input(name = "password" type = "password" class="form-control" placeholder = "Password")
                                        br
                                    button(type="submit" class="btn btn-primary")  Login





        