doctype 5
html(lang='es')
   head
        title Register
        link(rel="stylesheet" href="/static/bootstrap/css/bootstrap.min.css")
        script(src="/static/bootstrap/js/jquery.js")
        script(src="/static/bootstrap/popper/dist/popper.js")
        script(src="/static/bootstrap/js/bootstrap.min.js")
   body
        if msg
            h4=msg
        h1 register
        .container
            form(action = "/register" method = "POST" class="form-inline" )
                .form-group
                    input(name = "name" type = "text" class="form-control" placeholder = "User name")
                .form-group
                    input(name = "password" type = "password" class="form-control" placeholder = "Password")
                .form-group
                    input(name = "email" type = "email" class="form-control" placeholder = "e-mail")
                br
                .form-group
                    button(type = "Submit")  Register!

        

